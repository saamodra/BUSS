@model BUSS.Models.Kategori_Wilayah

@{
    ViewBag.Title = "Detail Kategori Wilayah";
    ViewBag.SidebarMenu = "Kategori Wilayah";
}

<div class="page-inner">
    <div class="page-header">
        <h4 class="page-title">@ViewBag.Title</h4>
        <ul class="breadcrumbs">
            <li class="nav-home">
                <a href="/Admin">
                    <i class="flaticon-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="flaticon-right-arrow"></i>
            </li>
            <li class="nav-item">
                <a href="/Admin/KategoriWilayah">@ViewBag.SidebarMenu</a>
            </li>
            <li class="separator">
                <i class="flaticon-right-arrow"></i>
            </li>
            <li class="nav-item">
                <a href="#">Detail</a>
            </li>
        </ul>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">Tambahkan Kota</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("AddDetails", "KategoriWilayah", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.ID_KategoriWilayah)

                        <div class="form-group">
                            <label for="Kota">Kota</label>
                            @Html.DropDownList("ID_Kota", null, "Pilih Kota", htmlAttributes: new { @class = "form-control", @required="true" })
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Simpan" class="btn btn-primary" />
                            <a href="@Url.Action("Index", "KategoriWilayah")" class="btn btn-warning">Batal</a>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">@Model.Nama_Wilayah</h3>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table" id="example2">
                            <thead>
                                <tr>
                                    <th>No.</th>
                                    <th>Kota</th>
                                    <th>Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ int rowCount = 1; }
                                @foreach (var item in Model.Detail_Kategori)
                                {
                                    <tr>
                                        <td>@(rowCount++).</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Kota.Nama_Kota)
                                        </td>
                                        <td>
                                            <form action="@Url.Action("DeleteDetails", "KategoriWilayah")" method="post" class="d-inline deleteForm">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="ID_KategoriWilayah" value="@item.ID_KategoriWilayah" />
                                                <input type="hidden" name="ID_Kota" value="@item.ID_Kota" />
                                                <button type="submit" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i> Hapus</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        if ("@TempData["SuccessMessage"]" != "") {
            swal("Berhasil", "@TempData["SuccessMessage"]", {
                icon: "success",
                buttons: {
                    confirm: {
                        className: 'btn btn-success'
                    }
                },
            });
        }

        if ("@TempData["ErrorMessage"]" != "") {
            swal("Gagal", "@TempData["ErrorMessage"]", {
                icon: "error",
                buttons: {
                    confirm: {
                        className: 'btn btn-danger'
                    }
                },
            });
        }
    </script>
}
