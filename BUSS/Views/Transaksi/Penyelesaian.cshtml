@model BUSS.Models.Transaksi

@{
    ViewBag.Title = "Penyelesaian";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-inner">
    <div class="page-header">
        <h4 class="page-title">@ViewBag.Title</h4>
        <ul class="breadcrumbs">
            <li class="nav-home">
                <a href="/Admin">
                    <i class="flaticon-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="flaticon-right-arrow"></i>
            </li>
            <li class="nav-item">
                <a href="@Url.Action("Pesanan", "Transaksi")">@ViewBag.Title</a>
            </li>
            <li class="separator">
                <i class="flaticon-right-arrow"></i>
            </li>
            <li class="nav-item">
                <a href="#">Penyelesaian Transaksi</a>
            </li>
        </ul>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">@ViewBag.Title</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "formSubmit" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Biaya Tambahan</label>
                                    <input type="text" class="form-control" value="" id="Biaya_Tambahan" name="Biaya_Tambahan" />
                                </div>

                                <div class="form-group">
                                    <input type="submit" value="Simpan" class="btn btn-primary" />
                                    <a href="@Url.Action("Pesanan", "Pegawai")" class="btn btn-warning">Batal</a>
                                </div>
                            </div>

                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $("#formSubmit").submit(function (e) {
            var hargaKendaraan = $('#Biaya_Tambahan').val().replace(/[^0-9]/g, '');
            $('#Biaya_Tambahan').val(hargaKendaraan);
        });

        $(document).ready(function () {
            $('#Biaya_Tambahan').priceFormat({
                prefix: 'Rp',
                centsLimit: 0,
                thousandsSeparator: '.'
            });
        })
    </script>
}
