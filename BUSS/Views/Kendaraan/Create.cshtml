@model BUSS.Models.Kendaraan

@{
    ViewBag.Title = "Tambah Kendaraan";
    ViewBag.SidebarMenu = "Kendaraan";
}

<div class="page-inner">
    <div class="page-header">
        <h4 class="page-title">@ViewBag.SidebarMenu</h4>
        <ul class="breadcrumbs">
            <li class="nav-home">
                <a href="/Admin">
                    <i class="flaticon-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="flaticon-right-arrow"></i>
            </li>
            <li class="nav-item">
                <a href="/Admin/@ViewBag.SidebarMenu">@ViewBag.SidebarMenu</a>
            </li>
            <li class="separator">
                <i class="flaticon-right-arrow"></i>
            </li>
            <li class="nav-item">
                <a href="/Admin/@ViewBag.SidebarMenu/Create">Tambah</a>
            </li>
        </ul>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">@ViewBag.Title</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "formSubmit" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-md-4">

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Nama_Kendaraan)
                                    @Html.EditorFor(model => model.Nama_Kendaraan, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Nama_Kendaraan, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.ID_Jenis)
                                    @Html.DropDownList("ID_Jenis", null, "Pilih Jenis Kendaraan", htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ID_Jenis, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.No_Kendaraan)
                                    @Html.EditorFor(model => model.No_Kendaraan, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.No_Kendaraan, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Harga_kendaraan)
                                    @Html.EditorFor(model => model.Harga_kendaraan, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Harga_kendaraan, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <input type="submit" value="Simpan" class="btn btn-primary" />
                                    <a href="@Url.Action("Index", @ViewBag.SidebarMenu)" class="btn btn-warning">Batal</a>
                                </div>

                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $("#formSubmit").submit(function (e) {
            var hargaKendaraan = $('#Harga_kendaraan').val().replace(/[^0-9]/g, '');
            $('#Harga_kendaraan').val(hargaKendaraan);
        });

        $('#Harga_kendaraan').priceFormat({
            prefix: 'Rp',
            centsLimit: 0,
            thousandsSeparator: '.'
        });
    </script>
}
