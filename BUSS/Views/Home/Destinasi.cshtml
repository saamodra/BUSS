@model IEnumerable<BUSS.Models.Destinasi>

@{
    ViewBag.Title = "Destinasi";
    Layout = "~/Views/Shared/_LayoutHome2.cshtml";
}

<!-- Section Form -->
<section class="search-form-destinasi">
    <div class="shadow">
        <h3 class="form-title text-left">Daftar Destinasi</h3>
    </div>
</section>
<!-- End Section Form -->

<!-- Section Destination -->
<section class="bg-white">
    <div class="row">
        
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 mt-12">
            <div class="section-title">
                <div>
                    <h3 class="">Destinasi</h3>
                </div>
            </div>
            <hr>
            <div class="row">
                @foreach (var data in Model)
                {
                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 my-2">
                        <a href="@Url.Action("LihatDestinasi", "Home", new { id = data.ID_Destinasi })">
                            <div class="card h-100">
                                <img class="card-img-top" src="~/Content/upload/@data.Detail_Foto.FirstOrDefault().Foto" alt="@data.Nama_Destinasi">
                                <div class="card-body">
                                    <div class="card-title font-weight-bold h5">@data.Nama_Destinasi</div>
                                    <div class="d-flex justify-content-between">
                                        <p class="card-text m-0">@data.Kota.Nama_Kota</p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <i class="fa fa-star text-warning mr-2"></i>
                                            <text>@data.Rating (@data.Detail_Rating_Destinasi.Count)</text>
                                        </div>
                                    </div>
                                    
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>

            <button type="button" class="btn btn-black mx-auto my-5"><i class="fa fa-arrow-circle-down mr-2"></i> Muat lebih banyak</button>
        </div>
    </div>

</section>
<!-- End Section Destination -->