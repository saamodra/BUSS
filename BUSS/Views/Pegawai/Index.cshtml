@model IEnumerable<BUSS.Models.Pegawai>

@{
    ViewBag.Title = "Pegawai";
    ViewBag.SidebarMenu = "Pegawai";
}

<div class="page-inner">
    <div class="page-header">
        <h4 class="page-title">@ViewBag.Title</h4>
        <ul class="breadcrumbs">
            <li class="nav-home">
                <a href="/Admin">
                    <i class="flaticon-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="flaticon-right-arrow"></i>
            </li>
            <li class="nav-item">
                <a href="/Admin/Pegawai">Pegawai</a>
            </li>
        </ul>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">Data Pegawai</h3>
                    <a href="/Admin/Pegawai/Create" class="btn btn-primary"><i class="fa fa-plus-circle"></i> Tambah Data</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table" id="example2">
                            <thead>
                                <tr>
                                    <th>No.</th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Nama)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Alamat)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.No_HP)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Username)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Role)
                                    </th>
                                    <th>Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ int rowCount = 1; }
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@(rowCount++).</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nama)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Alamat)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.No_HP)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Username)
                                        </td>
                                        <td>
                                            @(item.Role == 1 ? "Admin" : "Tour Leader")
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Edit", "Pegawai", new { id = item.ID_Pegawai })" class="btn btn-warning btn-sm mr-1">
                                                <i class="fa fa-edit"></i> Ubah
                                            </a>
                                            <a href="@Url.Action("Details", "Pegawai", new { id = item.ID_Pegawai })" class="btn btn-info btn-sm mr-1">
                                                <i class="fa fa-eye"></i> Detil
                                            </a>
                                            <form action="@Url.Action("Delete", "Pegawai")" method="post" class="d-inline deleteForm">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@item.ID_Pegawai" />
                                                <button type="submit" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i> Hapus</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#example2').DataTable({
                "language": {
                    "lengthMenu": "_MENU_ Data per halaman",
                    "info": "Menampilkan _START_ sampai _END_ dari _TOTAL_ entries",
                    "zeroRecords": "Tidak ada data yang cocok",
                    "search": "Pencarian :",
                    "nextPage": "Selanjutnya"
                },
            });

            $(".deleteForm").one('submit', function (e) {
                e.preventDefault();
                var form = $(this);
                swal({
                    title: 'Yakin ingin menghapus data ini?',
                    text: "Anda tidak akan bisa mengembalikan data ini",
                    icon: 'warning',
                    buttons: {
                        confirm: {
                            text: 'Hapus!',
                            className: 'btn btn-success'
                        },
                        cancel: {
                            visible: true,
                            className: 'btn btn-danger'
                        }
                    }
                }).then((isConfirm) => {
                    if (isConfirm) {
                        form.submit();
                    } else {
                        swal.close();
                    }
                });
            })
        });

        if ("@TempData["SuccessMessage"]" != "") {
            swal("Berhasil", "@TempData["SuccessMessage"]", {
                icon: "success",
                buttons: {
                    confirm: {
                        className: 'btn btn-success'
                    }
                },
            });
        }

        

    </script>
}