@model IEnumerable<BUSS.Models.Paket>

@{
    ViewBag.Title = "Paket";
    ViewBag.SidebarMenu = "Paket";
}

<div class="page-inner">
    <div class="page-header">
        <h4 class="page-title">@ViewBag.Title</h4>
        <ul class="breadcrumbs">
            <li class="nav-home">
                <a href="/Admin">
                    <i class="flaticon-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="flaticon-right-arrow"></i>
            </li>
            <li class="nav-item">
                <a href="@Url.Action("Index", ViewBag.SidebarMenu)">@ViewBag.Title</a>
            </li>
        </ul>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">Data @ViewBag.Title</h3>
                    <a href="@Url.Action("Create", ViewBag.SidebarMenu)" class="btn btn-primary"><i class="fa fa-plus-circle"></i> Tambah Data</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table" id="example2">
                            <thead>
                                <tr>
                                    <th>No.</th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Nama_Paket)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Harga)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Konsumsi)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Lama_Perjalanan)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Jenis_Paket)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Jadwal)
                                    </th>
                                    <th>Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ int rowCount = 1; }
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@(rowCount++).</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nama_Paket)
                                        </td>
                                        <td>
                                            @if (item.Harga == null)
                                            {
                                                <text>-</text>
                                            }
                                            else
                                            {
                                                @Html.DisplayFor(modelItem => item.Harga)
                                            }
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Konsumsi) x
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Lama_Perjalanan) Hari
                                        </td>
                                        <td>
                                            @(item.Jenis_Paket == 0 ? "Paket" : "Custom")
                                        </td>
                                        <td>
                                            @if (item.Jadwal == null)
                                            {
                                                <text>-</text>
                                            }
                                            else
                                            {
                                                <a href="~/Content/jadwal/@item.Jadwal">@item.Jadwal</a>
                                            }
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Edit", "Paket", new { id = item.ID_Paket })" class="btn btn-warning btn-sm mr-1">
                                                <i class="fa fa-edit"></i> Ubah
                                            </a>
                                            <a href="@Url.Action("Details", "Paket", new { id = item.ID_Paket })" class="btn btn-info btn-sm mr-1">
                                                <i class="fa fa-eye"></i> Detil
                                            </a>
                                            <form action="@Url.Action("Delete", "Paket")" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@item.ID_Paket" />
                                                <button type="submit" class="btn btn-danger deleteBtn btn-sm"><i class="fa fa-trash"></i> Hapus</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        if ("@TempData["SuccessMessage"]" != "") {
            swal("Berhasil", "@TempData["SuccessMessage"]", {
                icon: "success",
                buttons: {
                    confirm: {
                        className: 'btn btn-success'
                    }
                },
            });
        }


    </script>
}